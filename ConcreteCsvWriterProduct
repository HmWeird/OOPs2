package writers;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;

import business.Volkshochschulkurs;

public class ConcreteCsvWriterProduct extends WriterProduct {

	BufferedWriter bf = null;

	public ConcreteCsvWriterProduct() throws IOException {
		try {
			bf = new BufferedWriter(new FileWriter("KurseAusgabe.csv", true));
		} catch (IOException exc) {
			throw new IOException("Fehler beim Speichern der Datei!");

		}
	}

	@Override
	public void fuegeInDateiHinzu(Volkshochschulkurs kurs) throws IOException {
		if (kurs == null)
			throw new NullPointerException("Kein Kurs zum Speichern.");

		bf.write(kurs.gibKursDetailsZurueck(';'));
		bf.flush();

	}

	@Override
	public void schliesseDatei() throws IOException {
		bf.close();
	}

}
